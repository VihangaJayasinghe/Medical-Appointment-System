@model MedicalAppointmentSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login to MediCare";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-3 mt-5">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                <h2><i class="fas fa-sign-in-alt me-2"></i>Login to MediCare</h2>
                <p class="mb-0">Access your healthcare account</p>
            </div>
            <div class="card-body p-5">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-group form-check mb-4">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0">
                        Don't have an account?
                        <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Register as patient</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>