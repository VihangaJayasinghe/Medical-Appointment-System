@model MedicalAppointmentSystem.Models.DoctorManageViewModel
@{
    ViewData["Title"] = "Add New Doctor";
}

<h2>Add New Doctor</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Doctor Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddDoctor" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Specialty"></label>
                        <select asp-for="Specialty" class="form-control">
                            <option value="">Select Specialty</option>
                            @foreach (var specialty in ViewBag.Specialties)
                            {
                                <option value="@specialty">@specialty</option>
                            }
                        </select>
                        <span asp-validation-for="Specialty" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConsultationFee"></label>
                        <input asp-for="ConsultationFee" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="ConsultationFee" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Bio"></label>
                        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Doctor</button>
                        <a href="@Url.Action("Doctors")" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Information</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <i class="fas fa-info-circle"></i>
                    A default password will be set for the doctor account.
                    The doctor can change their password after first login.
                </p>
                <p class="text-muted">
                    <i class="fas fa-info-circle"></i>
                    After adding the doctor, remember to set their availability schedule.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}