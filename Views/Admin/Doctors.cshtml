@model List<MedicalAppointmentSystem.Models.Doctor>
@{
    ViewData["Title"] = "Manage Doctors";
}

<h2>Manage Doctors</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="mb-3">
    <a href="@Url.Action("AddDoctor")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Doctor
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5>All Doctors</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Specialty</th>
                            <th>Consultation Fee</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>@doctor.User?.Name</td>
                                <td>@doctor.User?.Email</td>
                                <td>@doctor.Specialty</td>
                                <td>$@doctor.ConsultationFee</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("EditDoctor", new { id = doctor.Id })" class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("ManageAvailability", new { doctorId = doctor.Id })" class="btn btn-info">
                                            <i class="fas fa-calendar"></i> Availability
                                        </a>
                                        <form asp-action="DeleteDoctor" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@doctor.Id" />
                                            <button type="submit" class="btn btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this doctor? This action cannot be undone.')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No doctors found</h5>
                <p>Get started by adding your first doctor.</p>
                <a href="@Url.Action("AddDoctor")" class="btn btn-primary">Add First Doctor</a>
            </div>
        }
    </div>
</div>