@model MedicalAppointmentSystem.Models.DoctorManageViewModel
@{
    ViewData["Title"] = "Edit Doctor";
    var availability = ViewBag.Availability as List<MedicalAppointmentSystem.Models.DoctorAvailability>;
}

<h2>Edit Doctor: @Model.Name</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Doctor Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditDoctor" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Specialty"></label>
                        <select asp-for="Specialty" class="form-control">
                            <option value="">Select Specialty</option>
                            @foreach (var specialty in ViewBag.Specialties)
                            {
                                    <option value="@specialty" selected="@(specialty == Model.Specialty)">@specialty</option>
                            }
                        </select>
                        <span asp-validation-for="Specialty" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConsultationFee"></label>
                        <input asp-for="ConsultationFee" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="ConsultationFee" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Bio"></label>
                        <textarea asp-for="Bio" class="form-control" rows="4">@Model.Bio</textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update Doctor</button>
                        <a href="@Url.Action("Doctors")" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Current Availability</h5>
            </div>
            <div class="card-body">
                @if (availability != null && availability.Any())
                {
                        <ul class="list-group">
                        @foreach (var avail in availability)
                        {
                                    <li class="list-group-item">
                                        <strong>@avail.Day:</strong> 
                                @avail.StartTime?.ToString(@"hh\:mm") - @avail.EndTime?.ToString(@"hh\:mm")
                                        <br>
                                        <small class="text-muted">@avail.Location</small>
                                    </li>
                        }
                        </ul>
                }
                else
                {
                        <p class="text-muted">No availability set.</p>
                }

                <div class="mt-3">
                    <a href="@Url.Action("ManageAvailability", new { doctorId = Model.Id })" class="btn btn-info btn-sm">
                        <i class="fas fa-calendar-plus"></i> Manage Availability
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}