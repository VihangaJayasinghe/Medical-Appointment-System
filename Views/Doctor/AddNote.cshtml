@{
    ViewData["Title"] = "Add Consultation Notes";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add Consultation Notes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .info-section {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .info-row {
            margin-bottom: 8px;
        }

        .info-label {
            font-weight: bold;
            color: #555;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            resize: vertical;
            min-height: 100px;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-primary {
            background: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Add Consultation Notes</h2>

        <div class="info-section">
            <div class="info-row">
                <span class="info-label">Doctor:</span> Dr. Bill Thomson
            </div>
            <div class="info-row">
                <span class="info-label">Patient:</span> p5
            </div>
            <div class="info-row">
                <span class="info-label">Date & Time:</span> 2025-09-08 09:30 - 10:00
            </div>
            <div class="info-row">
                <span class="info-label">Location:</span> Main Hospital
            </div>
        </div>

        <form>
            <div class="form-group">
                <label for="notes">Consultation Notes:</label>
                <textarea id="notes" placeholder="Enter consultation notes..."></textarea>
            </div>

            <div class="form-group">
                <label for="prescription">Prescription:</label>
                <textarea id="prescription" placeholder="Enter prescription details..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit Notes</button>
        </form>
    </div>
</body>
</html>