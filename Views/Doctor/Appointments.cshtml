@model List<MedicalAppointmentSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Appointments</h2>
    <div>
        <a href="@Url.Action("Appointments", new { filter = "upcoming" })" class="btn btn-outline-primary btn-sm">Upcoming</a>
        <a href="@Url.Action("Appointments", new { filter = "today" })" class="btn btn-outline-info btn-sm">Today</a>
        <a href="@Url.Action("Appointments", new { filter = "past" })" class="btn btn-outline-secondary btn-sm">Past</a>
        <a href="@Url.Action("Appointments", new { filter = "cancelled" })" class="btn btn-outline-danger btn-sm">Cancelled</a>
        <a href="@Url.Action("Appointments")" class="btn btn-outline-dark btn-sm">All</a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@(appointment.Patient?.User?.Name ?? "Unknown Patient")</td>
                        <td>@(appointment.AppointmentDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                        <td>
                            @(appointment.StartTime?.ToString(@"hh\:mm") ?? "N/A")
                            -
                            @(appointment.EndTime?.ToString(@"hh\:mm") ?? "N/A")
                        </td>

                        <td>@appointment.Location</td>
                        <td>
                            <span class="badge badge-@(appointment.Status == "confirmed" ? "success" :
                                                       appointment.Status == "cancelled" ? "danger" :
                                                       appointment.Status == "completed" ? "info" :
                                                       appointment.Status == "rescheduled" ? "warning" : "secondary")">
                                @appointment.Status
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                @if (appointment.Status != "cancelled" && appointment.Status != "completed")
                                {
                                    <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                        <input type="hidden" name="AppointmentId" value="@appointment.Id" />
                                        <input type="hidden" name="Action" value="confirm" />
                                        <button type="submit" class="btn btn-success">Confirm</button>
                                    </form>

                                    <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                        <input type="hidden" name="AppointmentId" value="@appointment.Id" />
                                        <input type="hidden" name="Action" value="cancel" />
                                        <button type="submit" class="btn btn-danger">Cancel</button>
                                    </form>

                                    <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                        <input type="hidden" name="AppointmentId" value="@appointment.Id" />
                                        <input type="hidden" name="Action" value="complete" />
                                        <button type="submit" class="btn btn-info">Complete</button>
                                    </form>

                                }

                                <a href="@Url.Action("PatientNotes", new { appointmentId = appointment.Id })"
                                   class="btn btn-primary">Notes</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No appointments found.
    </div>
}

<a href="@Url.Action("Dashboard")" class="btn btn-secondary">Back to Dashboard</a>