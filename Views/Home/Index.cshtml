@{
    ViewData["Title"] = "MediCare - Your Health, Our Priority";
}

<!-- Hero Section -->
<section class="hero-section bg-primary bg-gradient py-5">
    <div class="container py-5">
        <div class="row align-items-center py-5">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">Your Health is Our Priority</h1>
                <p class="lead text-white mb-4">MediCare provides comprehensive healthcare services with experienced doctors and state-of-the-art facilities. Book appointments, consult with specialists, and manage your health journey with ease.</p>
                
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/3004/3004456.png" alt="Healthcare Professionals" class="img-fluid" style="max-height: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Why Choose MediCare?</h2>
            <p class="lead text-muted">Experience healthcare that puts you first</p>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-md text-primary fs-2"></i>
                    </div>
                    <h4 class="fw-semibold">Expert Doctors</h4>
                    <p class="text-muted">Consult with board-certified specialists and experienced healthcare professionals.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-calendar-check text-success fs-2"></i>
                    </div>
                    <h4 class="fw-semibold">Easy Booking</h4>
                    <p class="text-muted">Schedule appointments online 24/7 with our convenient booking system.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-clock text-info fs-2"></i>
                    </div>
                    <h4 class="fw-semibold">24/7 Access</h4>
                    <p class="text-muted">Access your medical records and manage appointments anytime, anywhere.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="bg-light py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">How It Works</h2>
            <p class="lead text-muted">Get started with MediCare in three simple steps</p>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="d-flex align-items-start">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-4" style="width: 60px; height: 60px;">
                        <span class="fs-4 fw-bold">1</span>
                    </div>
                    <div>
                        <h4 class="fw-semibold">Create Account</h4>
                        <p class="text-muted">Register as a patient with your basic information to get started.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="d-flex align-items-start">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-4" style="width: 60px; height: 60px;">
                        <span class="fs-4 fw-bold">2</span>
                    </div>
                    <div>
                        <h4 class="fw-semibold">Find a Doctor</h4>
                        <p class="text-muted">Browse specialists by specialty, availability, or location.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="d-flex align-items-start">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-4" style="width: 60px; height: 60px;">
                        <span class="fs-4 fw-bold">3</span>
                    </div>
                    <div>
                        <h4 class="fw-semibold">Book Appointment</h4>
                        <p class="text-muted">Choose a convenient time and complete your booking.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg rounded-pill px-5">
                <i class="fas fa-user-plus me-2"></i>Get Started Today
            </a>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-user-md text-primary fs-2"></i>
                </div>
                <h3 class="fw-bold text-primary">50+</h3>
                <p class="text-muted">Expert Doctors</p>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-users text-success fs-2"></i>
                </div>
                <h3 class="fw-bold text-primary">10,000+</h3>
                <p class="text-muted">Happy Patients</p>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-calendar-check text-info fs-2"></i>
                </div>
                <h3 class="fw-bold text-primary">25,000+</h3>
                <p class="text-muted">Appointments</p>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-hospital text-warning fs-2"></i>
                </div>
                <h3 class="fw-bold text-primary">15+</h3>
                <p class="text-muted">Specialties</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="bg-primary py-5">
    <div class="container py-5 text-center">
        <h2 class="fw-bold text-white mb-4">Ready to Take Control of Your Health?</h2>
        <p class="lead text-white mb-4">Join thousands of patients who trust MediCare with their healthcare needs.</p>
        <div class="d-flex justify-content-center flex-wrap gap-3">
            <a href="@Url.Action("Register", "Account")" class="btn btn-light btn-lg rounded-pill px-5">
                <i class="fas fa-user-plus me-2"></i>Sign Up Now
            </a>
            <a href="@Url.Action("SearchDoctors", "Patient")" class="btn btn-outline-light btn-lg rounded-pill px-5">
                <i class="fas fa-search me-2"></i>Find a Doctor
            </a>
        </div>
    </div>
</section>

