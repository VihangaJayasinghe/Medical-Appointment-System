@{
    ViewData["Title"] = "My Medical Notes";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Medical Notes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 20px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f8f9fa;
        }

        .notes-cell {
            max-width: 300px;
            word-wrap: break-word;
        }

        .prescription-cell {
            max-width: 250px;
            word-wrap: break-word;
        }

        .header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 20px;
            border-radius: 5px 5px 0 0;
            margin: -20px -20px 20px -20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>My Medical Notes & Prescriptions</h2>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Doctor Name</th>
                    <th>Date</th>
                    <th>Consultation Notes</th>
                    <th>Prescription</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Dr. Sarah Johnson</td>
                    <td>2024-01-15</td>
                    <td class="notes-cell">Patient presented with fever and cough. Diagnosed with common cold. Recommended rest and hydration.</td>
                    <td class="prescription-cell">Paracetamol 500mg - 1 tablet every 6 hours for 3 days</td>
                </tr>
                <tr>
                    <td>Dr. Michael Chen</td>
                    <td>2024-02-20</td>
                    <td class="notes-cell">Routine checkup. Blood pressure normal. Cholesterol levels within range. Recommended maintaining current diet and exercise.</td>
                    <td class="prescription-cell">None - Routine checkup</td>
                </tr>
                <tr>
                    <td>Dr. Emily Davis</td>
                    <td>2024-03-10</td>
                    <td class="notes-cell">Follow-up for back pain. Physical therapy showing improvement. Continue exercises as prescribed.</td>
                    <td class="prescription-cell">Ibuprofen 400mg - as needed for pain</td>
                </tr>
                <tr>
                    <td>Dr. Robert Brown</td>
                    <td>2024-04-05</td>
                    <td class="notes-cell">Allergy consultation. Seasonal allergies confirmed. Recommended avoiding pollen exposure.</td>
                    <td class="prescription-cell">Loratadine 10mg - 1 tablet daily during allergy season</td>
                </tr>
                <tr>
                    <td>Dr. Bill Thomson</td>
                    <td>2025-09-08</td>
                    <td class="notes-cell">Test Note</td>
                    <td class="prescription-cell">Test Prescription</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>