<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalAppointmentSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hospital me-2"></i>MediCare
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">Welcome, @Context.Session.GetString("UserName")!</span>
                            </li>
                            @if (Context.Session.GetString("UserRole") == "patient")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Patient" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Patient" asp-action="SearchDoctors">
                                        <i class="fas fa-calendar-plus me-1"></i>Book Appointment
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Patient" asp-action="Appointments">
                                        <i class="fas fa-calendar-check me-1"></i>My Appointments
                                    </a>
                                </li>
                            }
                            else if (Context.Session.GetString("UserRole") == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Doctors">
                                        <i class="fas fa-user-md me-1"></i>Doctors
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Patients">
                                        <i class="fas fa-users me-1"></i>Patients
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Reports">
                                        <i class="fas fa-chart-bar me-1"></i>Reports
                                    </a>
                                </li>
                            }
                            else if (Context.Session.GetString("UserRole") == "doctor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="@Url.Action("Dashboard", "Doctor")">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="@Url.Action("Appointments", "Doctor")">
                                        <i class="fas fa-calendar me-1"></i>Appointments
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="@Url.Action("Availability", "Doctor")">
                                        <i class="fas fa-clock me-1"></i>Availability
                                    </a>
                                </li>
                            }
                            <li class="nav-item ms-auto">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-white">
                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-white mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - MediCare Pvt Ltd - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Your Health, Our Priority</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>